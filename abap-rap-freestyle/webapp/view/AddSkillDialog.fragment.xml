<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:layout="sap.ui.layout"
   xmlns:core="sap.ui.core" >
   <Dialog
      id="addSkillDialog"
      title="Add Skill to Employee">
      <layout:HorizontalLayout>
        <layout:VerticalLayout class="sapUiContentPadding">
            <Text text="Please select the skill you would like to add:"/>
            <Select
                selectedKey="{
                    path: '/Skills'
                }"
                items="{
                    path: '/Skills'
                    }"
                editable="{objectView>/editMode}">
                <core:Item key="{Id}" text="{Skill}"/>
            </Select>
        </layout:VerticalLayout>
      </layout:HorizontalLayout>
      <beginButton>
         <Button
            text="Add Skill"
            type="Emphasized"
            press="addSkill"/>
      </beginButton>
      <endButton>
      <Button
        text="Cancel"
        press="onCloseAddSkillDialog"/>
      </endButton>
   </Dialog>
</core:FragmentDefinition>