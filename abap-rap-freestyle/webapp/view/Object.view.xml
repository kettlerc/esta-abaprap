<mvc:View
    controllerName="freestylerap.abaprapfreestyle.controller.Object"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:semantic="sap.f.semantic">

    <semantic:SemanticPage
        id="page"
        headerPinnable="true"
        toggleHeaderOnTitleClick="true"
        busy="{objectView>/busy}"
        busyIndicatorDelay="{objectView>/delay}"
        floatingFooter="true"
        showNavButton="true"
		navButtonPress="onNavBack">

        <semantic:titleHeading>
            <layout:VerticalLayout>
                <Title 
                    id="bigName"
                    visible="true"
                    text="{Fullname}"/>
                <Input
                    id="bigNameEdit"
                    visible="false"
                    editable="{objectView>/editMode}"
                    value="{Fullname}"/>
            </layout:VerticalLayout>
        </semantic:titleHeading>

        <semantic:headerContent>
            <layout:HorizontalLayout id="information" visible="true">
                <Avatar 
                    displaySize="XL"
                    class="sapUiMediumMarginEnd"/>
                <layout:VerticalLayout class="sapUiMediumMarginEnd">
                    <layout:HorizontalLayout class="sapUiSmallMarginBottom">
                        <Label text="Department" design="Bold" class="sapUiSmallMarginEnd"/>
                        <Text text="{Department}"/>
                    </layout:HorizontalLayout>
                    <layout:HorizontalLayout class="sapUiSmallMarginBottom">
                        <Label text="Title" design="Bold" class="sapUiSmallMarginEnd"/>
                        <Text text="{Title}"/>
                    </layout:HorizontalLayout>
                    <layout:HorizontalLayout class="sapUiSmallMarginBottom">
                        <Label text="Role" design="Bold" class="sapUiSmallMarginEnd"/>
                        <Text text="{Role}"/>
                    </layout:HorizontalLayout>
                </layout:VerticalLayout>
                <layout:VerticalLayout class="sapUiMediumMarginEnd">
                    <layout:HorizontalLayout class="sapUiSmallMarginBottom">
                        <Label text="Direct Report" design="Bold" class="sapUiSmallMarginEnd"/>
                        <Text text="{DirectReport}"/>
                    </layout:HorizontalLayout>
                    <layout:HorizontalLayout class="sapUiSmallMarginBottom">
                        <Label text="Start Date" design="Bold" class="sapUiSmallMarginEnd"/>
                        <Text text="{StartDate}"/>
                    </layout:HorizontalLayout>
                    <layout:HorizontalLayout class="sapUiSmallMarginBottom">
                        <Label text="Email" design="Bold" class="sapUiSmallMarginEnd"/>
                        <Text text="{Email}"/>
                    </layout:HorizontalLayout>
                </layout:VerticalLayout>
            </layout:HorizontalLayout>
            <layout:HorizontalLayout id="inputs" visible="false">
                <layout:VerticalLayout class="sapUiMediumMarginEnd">
                    <Label text="Department" design="Bold"/>
                    <Input
                        editable="{objectView>/editMode}"
                        value="{Department}"/>
                    <Label text="Title" design="Bold"/>
                    <Input
                        editable="{objectView>/editMode}"
                        value="{Title}"/>
                    <Label text="Role" design="Bold"/>
                    <Input
                        editable="{objectView>/editMode}"
                        value="{Role}"/>
                </layout:VerticalLayout>
                <layout:VerticalLayout class="sapUiMediumMarginEnd">
                    <Label text="Direct Report" design="Bold"/>
                    <Input
                        editable="{objectView>/editMode}"
                        value="{DirectReport}"/>
                    <Label text="Start Date" design="Bold"/>
                    <DatePicker
                        editable="{objectView>/editMode}"
                        value="{StartDate}"/>
                    <Label text="Email" design="Bold"/>
                    <Input
                        editable="{objectView>/editMode}"
                        value="{Email}"/>
                </layout:VerticalLayout>
            </layout:HorizontalLayout>
        </semantic:headerContent>

        <semantic:content>
            <Table
                id="skillTable"
                width="auto"
                items="{
                    path: 'Employees2Skills',
                    sorter: {
                        path: 'Id',
                        descending: false
                    }
                }"
                mode="MultiSelect"
                growing="true"
                growingScrollToLoad="true">

                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            id="tableHeader"
                            text="Skills"
                            level="H3"/>
                        <ToolbarSpacer />
                        <Button
                            visible="{objectView>/editMode}"
                            icon="sap-icon://add"
                            type="Transparent"
                            press="onAddSkillDialog"/>
                        <Button
                            visible="{objectView>/editMode}"
                            icon="sap-icon://delete"
                            type="Transparent"
                            press="onDeleteSkill"/>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column id="skillColumn">
                        <Text text="{i18n>skillColumnTitle}" id="skillColumnTitle"/>
                    </Column>
                    <Column id="institutionColumn">
                        <Text text="{i18n>skillInstitutionTitle}" id="skillInstitutionTitle"/>
                    </Column>
                    <Column id="skillTypeColumn">
                        <Text text="{i18n>skillTypeTitle}" id="skillTypeTitle"/>
                    </Column>
                    <Column id="skillDateColumn">
                        <Text text="{i18n>skillDateTitle}" id="skillDateTitle"/>
                    </Column>
                    <Column id="skillRenewalColumn">
                        <Text text="{i18n>skillRenewalTitle}" id="skillRenewalTitle"/>
                    </Column>
                    <Column id="skillComfortColumn">
                        <Text text="{i18n>skillComfortTitle}" id="skillComfortTitle"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Text 
                                text="{_Skills/Skill}"/>
                            <Text
                                text="{_Skills/Institution}"/>
                            <Text
                                text="{_Skills/Type}"/>
                            <DatePicker
                                editable="{objectView>/editMode}"
                                value="{Dateacquired}"/>
                            <Input
                                editable="{objectView>/editMode}"
                                value="{Renewal}"/>
                            <Input
                                editable="{objectView>/editMode}"
                                value="{Comfortlevel}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </semantic:content>

        <semantic:titleMainAction>
			<semantic:TitleMainAction id="editAction" text="Edit" press="onEditEmployee"/>
		</semantic:titleMainAction>

        <semantic:deleteAction>
			<semantic:DeleteAction id="deleteAction" press="onOpenDeleteDialog"/>
		</semantic:deleteAction>

        <semantic:footerMainAction>
			<semantic:FooterMainAction text="Save" press="onSave"/>
		</semantic:footerMainAction>

		<semantic:footerCustomActions>
			<Button id="cancelAction" text="Cancel" press="onResetChanges"/>
		</semantic:footerCustomActions>

        <semantic:dependents>
			<core:Fragment fragmentName="freestylerap.abaprapfreestyle.view.AddSkillDialog" type="XML" />
            <core:Fragment fragmentName="freestylerap.abaprapfreestyle.view.DeleteDialog" type="XML" />
		</semantic:dependents>

    </semantic:SemanticPage>

</mvc:View>