<mvc:View
    controllerName="freestylerap.abaprapfreestyle.controller.Skills"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:semantic="sap.f.semantic">

    <semantic:SemanticPage
        id="skillsPage"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false" 
        showFooter="{skillView>/editMode}"
        showNavButton="true"
		navButtonPress="onNavBack">

        <semantic:titleHeading>
            <Title
                text="Master Skill List"
                level="H2"/>
        </semantic:titleHeading>

        <semantic:content>
            <Table
                id="skillsTable"
                width="auto"
                items="{
                    path: '/Skills',
                    parameters: {
                        $$updateGroupId : 'SkillGroup'
                    }
                }"
                noDataText="{worklistView>/tableNoDataText}"
                busyIndicatorDelay="{worklistView>/tableBusyDelay}"
                growing="true"
                growingScrollToLoad="true"
                updateFinished=".onUpdateFinished"
                mode="SingleSelectLeft"
                alternateRowColors = "true">

                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            id="tableHeader"
                            text="{Master Skills List}"
                            level="H3"/>
                        <ToolbarSpacer />
                        <Button
                            id="refreshUsersButton"
                            icon="sap-icon://refresh"
                            press="onRefresh"/>
                        <Button
                            id="exportEmployeeListButton"
                            icon="sap-icon://excel-attachment"
                            press="onExport"/>
                        <SearchField
                            id="searchField"
                            tooltip="{i18n>worklistSearchTooltip}"
                            liveChange=".onSearch">
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    maxWidth="200px"
                                    priority="NeverOverflow"/>
                            </layoutData>
                        </SearchField>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column id="skillColumn">
                        <Text text="Skill" id="skillColumnTitle"/>
                    </Column>
                    <Column id="skillTypeColumn">
                        <Text text="Type" id="skillTypeColumnTitle"/>
                    </Column>
                    <Column id="institutionColumn">
                        <Text text="Institution" id="institutionColumnTitle"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <VBox>
                                <ObjectIdentifier
                                    id="skill"
                                    title="{Skill}"
                                    visible ="{=!${skillView>/editMode}}"/>
                                <Input 
                                    id="skillEdit"
                                    value="{Skill}"
                                    visible="{skillView>/editMode}"
                                    editable="true"/>
                            </VBox>
                            <VBox>
                                <ObjectIdentifier
                                    id="type"
                                    text="{Type}"
                                    visible ="{=!${skillView>/editMode}}"/>
                                <Input 
                                    id="typeEdit"
                                    value="{Type}"
                                    visible="{skillView>/editMode}"
                                    editable="true"/>
                            </VBox>
                            <VBox>
                                <ObjectIdentifier
                                    id="institution"
                                    text="{Institution}"
                                    visible ="{=!${skillView>/editMode}}"/>
                                <Input 
                                    id="institutionEdit"
                                    value="{Institution}"
                                    visible="{skillView>/editMode}"
                                    editable="true"/>
                            </VBox>
                            <ObjectNumber />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </semantic:content>
        
        <semantic:titleMainAction>
			<semantic:TitleMainAction text="Manage Employees" press="onEmployeeList"/>
		</semantic:titleMainAction>

        <semantic:addAction>
			<semantic:AddAction press="onAddSkill"/>
		</semantic:addAction>

        <semantic:editAction>
			<semantic:EditAction id="editAction" press="onEditSkill"/>
		</semantic:editAction>

        <semantic:deleteAction>
			<semantic:DeleteAction press="onDeleteMasterSkill"/>
		</semantic:deleteAction>

        <semantic:footerMainAction>
			<semantic:FooterMainAction text="Save" press="onSave"/>
		</semantic:footerMainAction>

		<semantic:footerCustomActions>
			<Button id="cancelAction" text="Cancel" press="onResetChanges"/>
		</semantic:footerCustomActions>

    </semantic:SemanticPage>

</mvc:View>