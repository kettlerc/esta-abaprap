<mvc:View
    controllerName="freestylerap.abaprapfreestyle.controller.Skills"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:semantic="sap.f.semantic">

    <semantic:SemanticPage
        id="skillsPage"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false" 
        showFooter = "{skillView>/editMode}">

        <semantic:titleHeading>
            <Title
                text="Master Skill List"
                level="H2"/>
        </semantic:titleHeading>

        <semantic:content>
            <Table
                id="skillsTable"
                width="auto"
                items="{
                    path: '/Skills',
                    parameters: {
                        $$updateGroupId : 'SkillGroup'
                    }
                }"
                noDataText="{worklistView>/tableNoDataText}"
                busyIndicatorDelay="{worklistView>/tableBusyDelay}"
                growing="true"
                growingScrollToLoad="true"
                updateFinished=".onUpdateFinished"
                mode="SingleSelectLeft">

                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            id="tableHeader"
                            text="{Master Skills List}"
                            level="H3"/>
                        <ToolbarSpacer />
                        <Button
                            id="refreshUsersButton"
                            icon="sap-icon://refresh"
                            press="onRefresh"/>
                        <SearchField
                            id="searchField"
                            tooltip="{i18n>worklistSearchTooltip}"
                            search=".onSearch">
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    maxWidth="200px"
                                    priority="NeverOverflow"/>
                            </layoutData>
                        </SearchField>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column id="skillColumn">
                        <Text text="Skill" id="skillColumnTitle"/>
                    </Column>
                    <Column id="skillTypeColumn">
                        <Text text="Type" id="skillTypeColumnTitle"/>
                    </Column>
                    <Column id="institutionColumn">
                        <Text text="Institution" id="institutionColumnTitle"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <ObjectIdentifier
                                id="skill"
                                title="{Skill}"
                                visible ="true"/>
                            <Input 
                                id="skillEdit"
                                value="{Skill}"
                                visible="false"
                                editable="{skillView>/editMode}"/>
                            <ObjectIdentifier
                                id="type"
                                text="{Type}"
                                visible ="true"/>
                            <Input 
                                id="typeEdit"
                                value="{Type}"
                                visible="false"
                                editable="{skillView>/editMode}"/>
                            <ObjectIdentifier
                                id="institution"
                                text="{Institution}"
                                visible ="true"/>
                            <Input 
                                id="institutionEdit"
                                value="{Institution}"
                                visible="false"
                                editable="{skillView>/editMode}"/>
                            <ObjectNumber />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </semantic:content>

        <semantic:sendEmailAction>
            <semantic:SendEmailAction id="shareEmail" press=".onShareEmailPress"/>
        </semantic:sendEmailAction>

        <semantic:addAction>
			<semantic:AddAction press="onAddSkill"/>
		</semantic:addAction>

        <semantic:editAction>
			<semantic:EditAction id="editAction" press="onEditSkill"/>
		</semantic:editAction>

        <semantic:deleteAction>
			<semantic:DeleteAction press="onDeleteMasterSkill"/>
		</semantic:deleteAction>

        <semantic:footerMainAction>
			<semantic:FooterMainAction text="Save" press="onSave"/>
		</semantic:footerMainAction>

		<semantic:footerCustomActions>
			<Button id="cancelAction" text="Cancel" press="onResetChanges"/>
		</semantic:footerCustomActions>

    </semantic:SemanticPage>

</mvc:View>