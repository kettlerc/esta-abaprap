<mvc:View
    controllerName="freestylerap.abaprapfreestyle.controller.Worklist"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:semantic="sap.f.semantic"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable">

    <semantic:SemanticPage
        id="page"
        headerPinnable="true"
        autoPopinMode="true"
        floatingFooter="true"
        contextualWidth="Auto"
        growing="true"
        toggleHeaderOnTitleClick="false">

        <semantic:titleHeading>
            <Title
                text="{i18n>worklistTitle}"
                level="H2"/>
        </semantic:titleHeading>

        <semantic:content>
            <Table
                id="employeeTable"
                width="auto"
                items="{
                    path: '/Employees',
                    sorter: {
                        path: 'Id',
                        descending: false
                    }
                }"
                noDataText="{worklistView>/tableNoDataText}"
                busyIndicatorDelay="{worklistView>/tableBusyDelay}"
                growing="true"
                growingScrollToLoad="true"
                updateFinished=".onUpdateFinished"
                alternateRowColors = "true">

                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            id="tableHeader"
                            text="{worklistView>/worklistTableTitle}"
                            level="H3"/>
                        <ToolbarSpacer />
                        <Button
                            id="refreshUsersButton"
                            icon="sap-icon://refresh"
                            press="onRefresh"/>
                        <Button
                            id="exportEmployeeListButton"
                            icon="sap-icon://excel-attachment"
                            press="onExportSpreadsheet"/>
                        <SearchField
                            id="searchField"
                            tooltip="{i18n>worklistSearchTooltip}"
                            liveChange=".onSearch">
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    maxWidth="200px"
                                    priority="NeverOverflow"/>
                            </layoutData>
                        </SearchField>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column id="nameColumn">
                        <Text text="{i18n>nameColumnTitle}" id="nameColumnTitle"/>
                    </Column>
                    <Column id="departmentColumn">
                        <Text text="{i18n>departmentColumnTitle}" id="departmentColumnTitle"/>
                    </Column>
                    <Column id="titleColumn">
                        <Text text="{i18n>titleColumnTitle}" id="titleColumnTitle"/>
                    </Column>
                    <Column id="roleColumn">
                        <Text text="{i18n>roleColumnTitle}" id="roleColumnTitle"/>
                    </Column>
                    <Column id="directReportColumn">
                        <Text text="{i18n>directReportColumnTitle}" id="directReportColumnTitle"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem
                        type="Navigation"
                        press=".onPress">
                        <cells>
                            <ObjectIdentifier
                                title="{Fullname}"/>
                            <ObjectIdentifier
                                text="{Department}"/>
                            <ObjectIdentifier
                                text="{Title}"/>
                            <ObjectIdentifier
                                text="{Role}"/>
                            <ObjectIdentifier
                                text="{DirectReport}"/>
                            <ObjectNumber />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </semantic:content>

        <semantic:titleCustomTextActions>
			<Button text="Master Skill List" press="onMasterSkillList"/>
		</semantic:titleCustomTextActions>
        
        <semantic:titleMainAction>
			<semantic:TitleMainAction text="Add Employee" press="onAddEmployee"/>
		</semantic:titleMainAction>

    </semantic:SemanticPage>

</mvc:View>