<mvc:View
    controllerName="freestylerap.abaprapfreestyle.controller.Worklist"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:semantic="sap.f.semantic"
    xmlns:fb="sap.ui.comp.filterbar">

    <semantic:SemanticPage
        id="page"
        headerPinnable="true"
		toggleHeaderOnTitleClick="true"
		preserveHeaderStateOnScroll="false">

        <semantic:titleHeading>
            <Title
                text="{i18n>worklistTitle}"
                level="H2"/>
        </semantic:titleHeading>

        <semantic:headerContent>
            <fb:FilterBar 
                id="filterbar" 
                search="onSearch" 
                useToolbar="true">
                <fb:filterGroupItems>
                    <fb:FilterGroupItem 
                        groupName="searchName" 
                        groupTitle="Group1" 
                        name="Name" 
                        label="Name" 
                        labelTooltip="Search by name">
                        <fb:control>
                            <Input type="Text"/>
                        </fb:control>
				    </fb:FilterGroupItem>
                    <fb:FilterGroupItem 
                        groupName="searchDepartment" 
                        groupTitle="Group1" 
                        name="Department" 
                        label="Department" 
                        labelTooltip="Search by department">
                        <fb:control>
                            <Input type="Text"/>
                        </fb:control>
				    </fb:FilterGroupItem>
                    <fb:FilterGroupItem 
                        groupName="searchTitle" 
                        groupTitle="Group1" 
                        name="Title" 
                        label="Title" 
                        labelTooltip="Search by title">
                        <fb:control>
                            <Input type="Text"/>
                        </fb:control>
				    </fb:FilterGroupItem>
                    <fb:FilterGroupItem 
                        groupName="searchRole" 
                        groupTitle="Group1" 
                        name="Role" 
                        label="Role" 
                        labelTooltip="Search by role">
                        <fb:control>
                            <Input type="Text"/>
                        </fb:control>
				    </fb:FilterGroupItem>
                    <fb:FilterGroupItem 
                        groupName="searchDirectReport" 
                        groupTitle="Group1" 
                        name="Direct Report" 
                        label="Direct Report" 
                        labelTooltip="Search by direct report">
                        <fb:control>
                            <Input type="Text"/>
                        </fb:control>
				    </fb:FilterGroupItem>
                </fb:filterGroupItems>
            </fb:FilterBar>
        </semantic:headerContent>

        <semantic:content>
            <Table
                id="employeeTable"
                width="auto"
                items="{
                    path: '/Employees',
                    sorter: {
                        path: 'Id',
                        descending: false
                    }
                }"
                noDataText="{worklistView>/tableNoDataText}"
                busyIndicatorDelay="{worklistView>/tableBusyDelay}"
                growing="true"
                growingScrollToLoad="true"
                updateFinished=".onUpdateFinished"
                alternateRowColors = "true">

                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            id="tableHeader"
                            text="{worklistView>/worklistTableTitle}"
                            level="H3"/>
                        <ToolbarSpacer />
                        <Button
                            id="refreshUsersButton"
                            icon="sap-icon://refresh"
                            press="onRefresh"/>
                        <Button
                            id="exportEmployeeListButton"
                            icon="sap-icon://excel-attachment"
                            press="onExport"/>
                        <SearchField
                            id="searchField"
                            tooltip="{i18n>worklistSearchTooltip}"
                            liveChange=".onSearch">
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    maxWidth="200px"
                                    priority="NeverOverflow"/>
                            </layoutData>
                        </SearchField>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column id="nameColumn">
                        <Text text="{i18n>nameColumnTitle}" id="nameColumnTitle"/>
                    </Column>
                    <Column id="departmentColumn">
                        <Text text="{i18n>departmentColumnTitle}" id="departmentColumnTitle"/>
                    </Column>
                    <Column id="titleColumn">
                        <Text text="{i18n>titleColumnTitle}" id="titleColumnTitle"/>
                    </Column>
                    <Column id="roleColumn">
                        <Text text="{i18n>roleColumnTitle}" id="roleColumnTitle"/>
                    </Column>
                    <Column id="directReportColumn">
                        <Text text="{i18n>directReportColumnTitle}" id="directReportColumnTitle"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem
                        type="Navigation"
                        press=".onPress">
                        <cells>
                            <ObjectIdentifier
                                title="{Fullname}"/>
                            <ObjectIdentifier
                                text="{Department}"/>
                            <ObjectIdentifier
                                text="{Title}"/>
                            <ObjectIdentifier
                                text="{Role}"/>
                            <ObjectIdentifier
                                text="{DirectReport}"/>
                            <ObjectNumber />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </semantic:content>

        <semantic:titleCustomTextActions>
			<Button text="Add Employee" press="onAddEmployee"/>
		</semantic:titleCustomTextActions>
        
        <semantic:titleMainAction>
			<semantic:TitleMainAction text="Manage Skills" press="onMasterSkillList"/>
		</semantic:titleMainAction>

    </semantic:SemanticPage>

</mvc:View>